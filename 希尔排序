//希尔排序是插入排序的一种改进
//适合解决大规模，无序的数组
//时间复杂度 达不到平方量级
//我们一般使用的递增数列是： 1，4，13，40，121，356
#include <iostream>
#include <vector>
using namespace std;
void Swap(int &a, int &b) {
	int temp = a;
	a = b;
	b = temp;
}
bool Lesser(int a, int b) {
	return a < b ? true : false;
}
void ShellSort(vector<int> &a) {
	//设置递增数列
	int h = 1;
	int N = a.size();
	while (h<N/3)
	{
		h = h * 3 + 1;
	}
	//按递增数列从大到小进行插入排序
	while (h>=1)
	{
		//插入排序  a[i] 插入到a[i-h]上
		for (int i = 1; i < N; i++) {
			for (int j = i; j >= h && Lesser(a[j], a[j - h]); j -= h) {
				Swap(a[j], a[j - h]);

			}
		}
		h /= 3;  
	}
}
